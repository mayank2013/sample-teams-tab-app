{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "More actions âœ¨",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "Input.ChoiceSet",
      "id": "uniqu",
      "choices": [],
      "choices.data": {
        "type": "data.query",
        "dataset": "graph.microsoft.com/users?scope=currentcontext"
      }
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": true,
      "text": "Hello, nice to meet you!",
      "wrap": true,
      "maxLines": 0,
      "id": "textToToggle",
      "isVisible": false
    },
    {
      "type": "ColumnSet",
      "isVisible": false,
      "id": "imagesToToggle",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "style": "person",
              "type": "Image",
              "url": "https://picsum.photos/300?image=1025",
              "isVisible": false,
              "id": "imageToToggle",
              "altText": "sample image 1",
              "size": "medium"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "https://picsum.photos/300?image=433",
              "isVisible": false,
              "id": "imageToToggle2",
              "altText": "sample image 2",
              "size": "medium"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ToggleVisibility",
      "title": "Get started",
      "targetElements": ["textToToggle", "imagesToToggle", "imageToToggle2"]
    },
    {
      "type": "Action.ShowCard",
      "title": "Learn more",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "text": "Adaptive Card Tabs Spec"
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "Open in browser",
            "url": "https://microsoft.sharepoint.com/:p:/t/ExtensibilityandFundamentals/EWCKez9sB3NEta260kfdMnkBFUu16Z9rnN-gugIqh8D5QQ?e=tBMY9U"
          }
        ]
      }
    },
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "msteams": {
          "type": "task/submit"
        }
      }
    }
  ]
}
